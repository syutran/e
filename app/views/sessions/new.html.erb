<%= form_tag sessions_path do  %>
  <div class="form_title" ><h3>登录</h3></div>
  <div class="form_box" >
    <div class="form_row">
      <div class=""></div>
    </div>
    <div class="form_row">
      <div class="form_label">
        <%= label_tag :email, "登录用邮箱" %>
      </div>
      <div class="form_field">
        <%= text_field_tag :email, params[:email], :style => "width:200px;" %>
      </div><div class="clearfloat"></div>
    </div>
    <div class="form_row">
      <div class="form_label">
        <%= label_tag :password, "密码" %>
      </div>
      <div class="form_field">
        <%= password_field_tag :password, params[:password], :style => "width:200px;" %>
      </div><div class="clearfloat"></div></div>
    <div class="form_row">
      <div class="form_button"><%= submit_tag  "登录", :style => "margin-right:200px;" %>  </div></div>
  <% end %><div class="clearfloat"></div>

</div>
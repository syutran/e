
  <div class="form_title"> <h3>创建新分类</h3> </div>
  <div class="clearfloat"></div>

<div class="form_box">
<%= form_for @user_category do |f| %>
  <div class="form_row"><div class="form_label">
      <%= f.label :title, "分类标题" %>
    </div><div class="form_field">
      <%= f.text_field :title %>
    </div><div class="clearfloat"></div></div>
  <div class="form_row"><div class="form_label">
      <%= f.label :extent, "权限范围" %>
    </div><div class="form_field">
      <%= f.radio_button :extent, "public" %><%= f.label :extent_public, "公开" %>
      <%= f.radio_button :extent, "group" %><%= f.label :extent_group, "群组" %>
      <%= f.radio_button :extent, "closed" %><%= f.label :extent_closed, "私有" %>
    </div><div class="clearfloat"></div></div>
  <div class="form_row"><div class="form_label"><%= f.label :description, "简要说明" %></div><div class="form_field">
      <%= f.text_area :description, :class => "input_area_option" %>
    </div><div class="clearfloat"></div></div>
  <div class="form_row"><div class="form_button">
      <%= f.submit "确认提交" %>
    </div><div class="clearfloat"></div></div>
<% end %>
  </div>
<% content_for :sidebar do %>
<%= render :partial => "storages/storages_menu"  %>
<% end %>


<%  if @categories %>
行业分类列表
<table>
  <% @categories.each do |c| %>
  <tr>
    <td colspan="2"><%= link_to c.title, {:action => "select_sub", :id => c.id}, :remote => true %></td>
  </tr>
  <tr>
    <td style="width: 80px" ></td>
    <td><div id="category_<%= c.id %>"></div></td>
  </tr>
  <tr>
    <td></td>
    <td><%= c.description %></td>
  </tr>
<% end %>
</table>
<% else puts "还没有分类" %>
<% end %>

<% content_for :sidebar do %>
<%= render :partial => "users/users_menu"  %>
<% end %>